/* Manage study */
body {
	/*padding: 0.25em;*/
	padding-left: 20%;
	padding-right: 20%;
}

.study-textarea {
	border: solid 1px black;
	resize: vertical;
	height: 60px;
	padding: 2px;
}

.study-textarea:disabled {
	color: #333;
}

.manage-study {
	font-size: 8.5pt;
}

.manage-study-row {
	margin-top: 15px;
}

.manage-study-section {
	border: none;
}

#study-header-institution-logo {
	float: left;
	width: 20%;
}

#institution-logo {
	width: 100%;
	height: 60px;
}

#study-header-items {
	margin-left: 1em;
	float: left;
	width: 78%;
	padding-bottom: 15px;
}

.study-header-item {
	width: 30%;
	float: left;
	margin-bottom: 5px;
}

.study-header-item-value {
	font-weight: bold;
}

#series-table {
	width: 100% !important;
	height: 70px;
}

#series-table th {
	padding: 1px;
}

#series-table td {
	padding-top: 0px;
	padding-bottom: 0px;
	padding-left: 2px;
	padding-right: 2px;
}

#study-header-first-column {
	width: 40%;
}

#study-header {
	width: 99%;
	padding-top: 5px;
	padding-bottom: 5px;
	padding-left: 10px;
	padding-right: 10px;
}

#study-series {
	padding-top: 5px;
	padding-bottom: 5px;
	padding-left: 10px;
	padding-right: 10px;
}

.study-urgency-1 {
	color: #d90;
	font-weight: bolder;
}

.study-urgency-2 {
	color: red;
	font-weight: bolder;
}

#study-clinical-data-other {
	width: 90%;
}

#study-clinical-data {
	height: auto;
	border: 1px solid black;
	padding-top: 5px;
	padding-bottom: 5px;
	padding-left: 10px;
	padding-right: 10px;
}

#study-attachments {
	border: 1px solid black;
	padding-top: 5px;
	padding-bottom: 5px;
	padding-left: 10px;
	padding-right: 10px;
}

#attachments-table {
	width: 99% !important;
	height: 70px;
}

#attachments-table th {
	padding: 1px;
}

#attachments-table td {
	padding-top: 0px;
	padding-bottom: 0px;
	padding-left: 2px;
	padding-right: 2px;
}

#study-assignment {
	border: 1px solid black;
	padding-top: 5px;
	padding-bottom: 5px;
	padding-left: 10px;
	padding-right: 10px;
}

#study-assignment-top {
	color: red;
	font-weight: bolder;
}

#study-messages {
	border: 1px solid black;
	padding-top: 5px;
	padding-bottom: 5px;
	padding-left: 10px;
	padding-right: 10px;
}

#study-messages-top {
	color: red;
	font-weight: bolder;
}

#study-message-or-incident {
	width: 99%;
}

#study-message-incident-resolution-date {
	width: 70px;
}

#study-report {
	border: 1px solid black;
	padding-bottom: 40px;
	padding-top: 5px;
	padding-left: 10px;
	padding-right: 10px;
}

.study-report-top-left {
	top: 10px;
	padding-bottom: 45px;
	color: #4444ff;
	font-weight: bolder;
	float: left;
}

.study-report-top-right {
	float: right;
}

.study-report-templates-label {
	color: #4444ff;
	font-weight: bolder;
	float: left;
	padding-top: 10px;
}

.study-report-templates-container {
	color: #4444ff;
	font-weight: bolder;
	float: right;
}

#study-report-body {
	
	top: 190px;
	width: 99%;
	height: 140px;
}

.study-report-template {
	font-weight: bold;
}

#btn-comprobar-caso {
	margin-right: 33%;
}

.study-report-bottom-left {
	float: left;
}

.study-report-bottom-right {
	float: right;
}

.study-report-bottom-right input[type=button] {
	width: 70px;
}

#TemplatesContainer {
	position: absolute;
	margin-top: 17px;
	padding-left: 15px;
}



.chrome #study-clinical-data-other {
	width: 87%;
}

.study-bottom {
	margin-top: 5px;
	border: 1px solid black;
	padding-top: 10px;
	padding-bottom: 15px;
	padding-left: 10px;
	padding-right: 10px;
}

#btn-study-log {
	float: right;
	width: 100px;
}

.chrome select {
	border-radius: 3.5px;
	background: linear-gradient(#ddd, #cccccc);
}

input[type=text] {
	background-color: #fff;
	border: double #aaa 0.25em;
	border-radius: 5px;
	padding-left: 5px;
}

input[type=text]:focus {
	background-color: #fff;
	border: double #888 0.25em;
	border-radius: 5px;
	padding-left: 5px;
}

input[type="text"]:disabled {
	background: #ddd;
	color: #444;
}