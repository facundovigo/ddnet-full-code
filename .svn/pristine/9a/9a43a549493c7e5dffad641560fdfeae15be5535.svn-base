@CHARSET "UTF-8";

#divBarraMenu {
	position: absolute;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 30px;
	font-size: 0.8em;
}

#divCuerpoPagina {
	position: absolute;
	top: 30px;
	left: 0px;
	width: 100%;
	border: none;
}

.ui-button.ui-widget.ui-state-default.ui-button-text-only {
	width: 200px;
}

#obras {
	position: absolute;
	top: 20%;
	left: 25%;
	width: 50%;
	height: 300px;
}

#PiedePagina {
	position: absolute;
	height: 20px;
}

#pageFooter {
	height: 35px;
	font-family: Arial, sans-serif !important;
	font-size: 0.8em;
	font-weight: bold;
	text-align: center;
}

#pageFooter a { color: gainsboro; }


#tableFooter {
	position: absolute;
	top: 0px;
	width: 100%;
}

#tablePagination {
	width: 100%;
	height: 30px;
	cursor: default;
	font-size: 0.8em;
	color: #333333;
}

#tbPages {
	height: 100%;
	width: 60%;
	display: inline-block;
	float: left;
	padding-top: 5px;
}

#tbLength {
	height: 100%;
	width: auto;
	display: inline-block;
	float: right;
	right: 0px;
}

#tbInfo {
	margin-right: 20px;
}

.pgChange {
	cursor: pointer;
}

.pageNum {
	cursor: pointer;
}

.pageNumSelected {
	color: black;
	font-weight: bold;
}

#ddnet-version {
	font-size: 0.8em;
	font-weigth: normal;
}

#cargando{
	
	position: absolute;
	text-align: center;
	width: 20%;
	margin: 10% 39.5%;
	background: white;
	padding: 30px 0px;
	border: double #aaa 0.25em;
	border-radius: 5px;
}

#cargando img{
	
}

