input[type=text] {
	background-color: #fff;
	border: double #aaa 0.25em;
	border-radius: 5px;
	padding-left: 5px;
}

input[type=text]:focus {
	background-color: #fff;
	border: double #888 0.25em;
	border-radius: 5px;
	padding-left: 5px;
}

input[type="text"]:disabled {
	background: #ddd;
	color: #444;
}

.chrome input[type=radio] {
	width: 1em !important;
	height: 1em !important;
}


.bottomSel{
	
	position: relative;
	top: -12px;
}


