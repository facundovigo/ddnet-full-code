	font-size: 7.5pt;
	width: 55px;
}

.filter-field-label {
	display: inline-block				!important;
	width: 10em							!important;
}

#studies-found-actions-container {
	margin-top: 5px;
	text-align: center;
}

.study-action-button {
	font-size: 0.6em;
	width: 13.5em;
	height: 3.5em;
} 

#studies-found {
    width: 100% !Important;
}

#studies-found_wrapper {
	font-size: 8.75pt;
}

#studies-found_wrapper th {
	/*text-align: center;*/
	padding: 5px 18px 5px 5px;
	border: solid 1px #6ea9ad;
	background-color: #ced9cd;	
}

#studies-found_wrapper tr.odd {
	background-color: #eee9dd;
}

#studies-found_wrapper tr.even {
	background-color: #dee9dd;
}

#studies-found_wrapper tr.DTTT_selected {
	background-color: #a6b3cd;
}

#studies-found_wrapper td {
	padding-top: 3px;
	padding-bottom: 3px;
	padding-left: 0;
	padding-right: 0;
}

.ui-menu-item {
	font-size: 9pt;
}

#dynamicModalDialog {
	overflow: hidden;
}

#dynamicModalDialogIframe {
	width: 100%; 
	height: 100%;
}

